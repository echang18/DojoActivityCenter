@{
    ViewData["Title"] = "View Activity";
}

@model Plan

<div class="jumbotron">
    <h1>@Model.PlanTitle</h1>
    <br>
    <a href="/home" class="btn btn-success">Home</a>
    <a href="/join/@Model.PlanId" class="btn btn-info">Join</a>
    <a href="/logout" class="btn btn-danger">Logout</a>
</div>

<div>
    <div class="col-7" style="display: inline-block; vertical-align: top;">
        <h2>Event Coordinator: @Model.Planner.Name</h2>
        <br>
        <h3>Date & Time: @Model.PlanStart</h3>
        <br>
        <h3>Duration: @Model.PlanDuration @Model.DurationTime</h3>
        <br>
        <h3>Description: @Model.PlanDescription</h3>
    </div>
    <div class="col-3" style="display: inline-block; vertical-align: top;">
        <h3>Participants:<h3>
        <ul>
            @foreach (Join j in Model.Attendees)
            {
                <li>@j.Joiner.Name</li>   
            }
        </ul>
    </div>
</div>